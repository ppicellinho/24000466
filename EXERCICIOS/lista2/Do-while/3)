#include <stdio.h>
#include<stdlib.h>

int main(){
    int opcao;
    printf("Controle de Atuação do Robô\n");
    printf("Escolha uma das seguintes ações para o robô realizar:\n1-ligar uma lampada\n2-tocar som\n3-mexer o braco\n4-encerrar acoes\n");

    do{
        printf("\nDigite o numero da ação: ");
        scanf("%d", &opcao);
        switch (opcao){
        case 1:
            printf("O robo ligou a lâmpada.\n");
            break;
        case 2:
            printf("O robo tocou um som.\n");
            break;
        case 3:
            printf("O robo moveu o braço.\n");
            break;
        case 4:
            printf("Programa encerrado\n");
            break;
        default:
            printf("Opção inválida! Por favor, selecione uma ação válida.\n");
        }
        while(opcao !=4);
        printf("Programa encerrado.\n");
    return 0;
}
