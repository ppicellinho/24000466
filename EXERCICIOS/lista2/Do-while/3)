#include <stdio.h>
#include<stdlib.h>

int main(){
    int opcao;
    printf("Acoes do robo\n");
    printf("Escolha uma das seguintes açoes para o robo realizar:\n1-ligar uma lampada\n2-tocar som\n3-mexer o braco\n4-encerrar acoes\n");

    do{
        printf("\ndigite o numero da acao: ");
        scanf("%d", &opcao);
        switch (opcao){
        case 1:
            printf("O robo ligou a lampada.\n");
            break;
        case 2:
            printf("O robo tocou um som.\n");
            break;
        case 3:
            printf("O robo moveu o braço.\n");
            break;
        case 4:
            printf("Programa encerrado\n");
            break;
        default:
            printf("opcao inexistente\n");
        }
        while(opcao !=4);
        printf("Programa encerrado.\n");
    return 0;
}
