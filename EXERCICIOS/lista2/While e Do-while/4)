#include <stdio.h>
#include<stdlib.h>

int main() {
    float deposito;
    printf("Quer abrir uma conta no banco ? Se sim faca o deposito minimo de R$ 500,00.\n");
    do {
        printf("Insira o deposito inicial: R$ ");
        scanf("%f", &deposito);

    if(deposito <500.0){
            printf("O depósito mínimo é de R$ 500,00. Por favor, insira o valor minimo ou um maior\n");
            }
    else{
            printf("Depósito de R$ %.2f creditado. Conta aberta", deposito);
            }
    }while (deposito <500.0);
    return 0;
}
